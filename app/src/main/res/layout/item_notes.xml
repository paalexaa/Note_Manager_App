<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/grey_back_item"
        android:layout_margin="10dp">
        
        <View
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:id="@+id/viewPriority"
            android:background="@drawable/blue_dot"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:textStyle="bold"
                android:textColor="@color/black_text"
                android:textSize="17sp"
                android:maxLines="1"
                android:id="@+id/notesTitle"
                android:text="@string/app_name"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:textColor="#99000000"
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                android:id="@+id/notesSubtitle"
                android:text="djsvhjefbvhefhjvfhjbsjkbjgfsbnjrgbnjr vfrjkvrejkbjrgkbjrtgk vgrjkbgrjkbhrtgkb;hrjkb brgnjbrgnjkbrg"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:textStyle="bold"
                android:textColor="@color/black_text"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:maxLines="1"
                android:id="@+id/notesDate"
                android:text="26 June 2024"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>